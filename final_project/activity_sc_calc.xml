<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Sc_Calc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/t2"
        android:layout_weight="1"
        android:background="#000"
        android:text=" "
        android:textColor="#f6f6f6"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/t1"
        android:background="#000"
        android:text=" "
        android:textColor="#fff"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/ac"
                        android:text="AC"
                        android:textSize="25sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/c"
                        android:text="C"
                        android:textSize="25sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="("
                        android:id="@+id/bb1"
                        android:textSize="25sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=")"
                        android:id="@+id/bb2"
                        android:textSize="25sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:text="sin"
                        android:id="@+id/sin"
                        android:textSize="24sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:id="@+id/cos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FF000000"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="21sp"></Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:text="tan"
                        android:id="@+id/tan"
                        android:textSize="23sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:text="log"
                        android:id="@+id/log"
                        android:textSize="23sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:text="ln"
                        android:id="@+id/ln"
                        android:textSize="26sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:text="x!"
                        android:id="@+id/fact"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:text="x²"
                        android:id="@+id/sq"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="√"
                        android:id="@+id/sqr"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:text="1/x"
                        android:id="@+id/dx"
                        android:textSize="23sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="÷"
                        android:id="@+id/d"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="7"
                        android:id="@+id/b7"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="8"
                        android:id="@+id/b8"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="9"
                        android:id="@+id/b9"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/m"
                        android:textAllCaps="false"
                        android:text="×"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b4"
                        android:text="4"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b5"
                        android:text="5"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b6"
                        android:text="6"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/s"
                        android:text="-"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b1"
                        android:text="1"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b2"
                        android:text="2"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b3"
                        android:text="3"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/a"
                        android:text="+"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p"
                        android:text="π"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b0"
                        android:text="0"
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/dot"
                        android:text="."
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#fff">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/eq"
                        android:text="="
                        android:textSize="30sp"
                        android:background="#FF000000"
                        android:textColor="#ffa500">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>